<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <NuProjPath Condition=" '$(NuProjPath)' == '' ">$(MSBuildExtensionsPath)\NuProj\</NuProjPath>
  </PropertyGroup>
  <Import Project="$(NuProjPath)\NuProj.props" Condition="Exists('$(NuProjPath)\NuProj.props')" />

  <Import Project="$(MSBuildThisFileDirectory)\..\Common\CommonProperties.nuproj" />

  <PropertyGroup>
    <Id>NQuery.Authoring.Composition</Id>
    <Title>NQuery.Authoring.Composition</Title>
    <Summary>NQuery.Authoring.Composition</Summary>
    <Description>NQuery.Authoring.Composition</Description>
  </PropertyGroup>

  <ItemGroup>
    <Dependency Include="NQuery.Authoring">
      <Version>$(Version)</Version>
    </Dependency>
  </ItemGroup>

  <ItemGroup>
    <Library Include="$(BasePath)NQuery.Authoring.Composition.dll">
      <TargetFramework>net45</TargetFramework>
    </Library>
  </ItemGroup>

  <Import Project="$(NuProjPath)\NuProj.targets" />

</Project>