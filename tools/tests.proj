<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="build.props" />

  <UsingTask TaskName="xunit" AssemblyFile="$(PackagesDir)xunit.runners.2.0.0-beta4-build2738\tools\xunit.runner.msbuild.dll" />

  <ItemGroup>
    <TestAssembly Include="$(OutDir)**\*test*.dll" />
  </ItemGroup>

  <Target Name="Clean" />

  <Target Name="Build">
    <xunit Assemblies="@(TestAssembly)" />
  </Target>

  <Target Name="Rebuild"
          DependsOnTargets="Clean;Build" />

</Project>
